# Copy this file to terraform.tfvars and update with your values

# General Configuration
aws_region   = "us-east-1"
project_name = "devops-golden-image"
environment  = "dev"
owner        = "YourName"

# SSH Keys
public_key_path  = "~/.ssh/id_rsa.pub"
private_key_path = "~/.ssh/id_rsa"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# Golden Image Configuration
golden_image_instance_type = "t3.large"   # Recommended for Minikube
golden_image_volume_size   = 50           # GB

# Create AMI after setup (set to true after configuration)
create_ami = false

# Security Configuration
allowed_ssh_cidr = ["0.0.0.0/0"]  # Restrict to your IP in production
allowed_web_cidr = ["0.0.0.0/0"]

# Monitoring
enable_monitoring = true

# Additional Tags
additional_tags = {
  CostCenter = "DevOps"
  Team       = "Platform"
  Purpose    = "GoldenImage"
}